{
    "name": "solidarity-builder",
    "version": "1.2.0",
    "description": "Build .solidarity.json file using the wizard",
    "license": "MIT",
    "author": {
        "name": "Piotr Kowalski",
        "email": "piecioshka@gmail.com",
